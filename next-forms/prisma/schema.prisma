generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  userId   String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  username String
  isAdmin  Boolean @default(false)
  forms    Form[]

  @@map("users")
}

model Form {
  formId      String     @id @default(auto()) @map("_id") @db.ObjectId
  formTitle   String
  description String
  createdBy   String     @db.ObjectId
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        User       @relation(fields: [createdBy], references: [userId], onDelete: Cascade)
  questions   Question[]
  answers     Answer[]

  @@map("forms")
}

model Question {
  questionId   String   @id @default(auto()) @map("_id") @db.ObjectId
  questionText String
  questionType String
  choices      String[]
  formId       String   @db.ObjectId
  form         Form     @relation(fields: [formId], references: [formId], onDelete: Cascade)
  answers      Answer[]

  @@index([formId])
  @@map("questions")
}

model Answer {
  answerId   String   @id @default(auto()) @map("_id") @db.ObjectId
  answer     String
  answeredBy String   @db.ObjectId
  formId     String   @db.ObjectId
  questionId String   @db.ObjectId
  form       Form     @relation(fields: [formId], references: [formId], onDelete: Cascade)
  question   Question @relation(fields: [questionId], references: [questionId], onDelete: Cascade)

  @@unique([answeredBy, questionId])
  @@index([formId])
  @@map("answers")
}
